.pieces
  .index
    .buffer
      %h1 Gallery
    .thin.blue.ribbon
    .buffer.right.left
      .carousel
        #carousel_container

          = link_to '#' do
            #left_scroll
              = image_tag 'arrow_left.png', class: 'no-frills'

          #carousel_inner
            %ul#carousel_ul
              - @pieces.each do |piece|
                %li
                  = image_tag(piece.image_url(:large), width: 500, height: 450, class: 'piece')
                  .description.pull-left
                    %h1= piece.title
                    %p= piece.description
            
          = link_to '#' do
            #right_scroll
              = image_tag 'arrow_right.png', class: 'no-frills'